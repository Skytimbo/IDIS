modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cacert", "cargo", "fontconfig", "freetype", "ghostscript", "glib", "glibcLocales", "gumbo", "harfbuzz", "jbig2dec", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libjpeg_turbo", "libtiff", "libwebp", "libxcrypt", "mupdf", "openjpeg", "pango", "pkg-config", "rustc", "swig", "tcl", "tesseract", "tk", "xcbuild", "xcodebuild", "zlib", "nano"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Context Store Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_context_store"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Demo Script"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_ingestion_agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_classifier_agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_summarizer_agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_tagger_agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run IDIS Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Cover Sheet"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Cover Sheet Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run IDIS Pipeline Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run IDIS Demo with PDF Output"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_permissions"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_end_to_end"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Watcher Service Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "QuantaIQ UI"

[[workflows.workflow]]
name = "Run Context Store Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest discover tests"

[[workflows.workflow]]
name = "test_context_store"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_context_store.py"

[[workflows.workflow]]
name = "Run Demo Script"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python demo_context_store.py"

[[workflows.workflow]]
name = "test_ingestion_agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_ingestion_agent.py"

[[workflows.workflow]]
name = "test_classifier_agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_classifier_agent.py"

[[workflows.workflow]]
name = "test_summarizer_agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_summarizer_agent.py"

[[workflows.workflow]]
name = "test_tagger_agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_tagger_agent.py"

[[workflows.workflow]]
name = "Run IDIS Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_idis_pipeline.py --create-docs --clean --openai"

[[workflows.workflow]]
name = "Test Cover Sheet"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_cover_sheet.py"

[[workflows.workflow]]
name = "Run Cover Sheet Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python demo_cover_sheet.py --db-path ./idis_demo.db --output-pdf ./idis_cover_sheet.pdf --create-demo"

[[workflows.workflow]]
name = "Run IDIS Pipeline Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python demo_idis_pipeline.py --clean --openai"

[[workflows.workflow]]
name = "Run IDIS Demo with PDF Output"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python demo_idis_pipeline.py --clean --openai --output-pdf ./demo_output.pdf"

[[workflows.workflow]]
name = "test_permissions"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_permissions.py"

[[workflows.workflow]]
name = "test_end_to_end"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_end_to_end.py"

[[workflows.workflow]]
name = "Run Watcher Service Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python watcher_service.py --watch-folder ./demo_watch --holding-folder ./demo_holding --archive-folder ./demo_archive --cover-sheets-folder ./demo_coversheets --db-path ./watcher_demo.db --openai"

[[workflows.workflow]]
name = "QuantaIQ UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python -m unittest discover tests"]

[[ports]]
localPort = 5000
externalPort = 80
