modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "gumbo", "harfbuzz", "jbig2dec", "libjpeg_turbo", "mupdf", "openjpeg", "swig", "tesseract", "xcbuild"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Context Store Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_context_store"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Demo Script"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_ingestion_agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_classifier_agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_summarizer_agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test_tagger_agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run IDIS Demo"

[[workflows.workflow]]
name = "Run Context Store Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest discover tests"

[[workflows.workflow]]
name = "test_context_store"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_context_store.py"

[[workflows.workflow]]
name = "Run Demo Script"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python demo_context_store.py"

[[workflows.workflow]]
name = "test_ingestion_agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_ingestion_agent.py"

[[workflows.workflow]]
name = "test_classifier_agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_classifier_agent.py"

[[workflows.workflow]]
name = "test_summarizer_agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_summarizer_agent.py"

[[workflows.workflow]]
name = "test_tagger_agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd tests && python -m unittest test_tagger_agent.py"

[[workflows.workflow]]
name = "Run IDIS Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_idis_pipeline.py --create-docs --clean"

[deployment]
run = ["sh", "-c", "python -m unittest discover tests"]
